# ===================================
# LOCAL DOCKER SETUP WITH GOOGLE GEMINI
# ===================================

# ===================================
# Database: PostgreSQL (Docker)
# ===================================
# Leave SUPABASE_URL empty to use local PostgreSQL
SUPABASE_URL=
SUPABASE_KEY=

# PostgreSQL configuration
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=thoughtprocessor
POSTGRES_PASSWORD=changeme123
POSTGRES_DB=thoughtprocessor
DATABASE_URL=postgresql://thoughtprocessor:changeme123@db:5432/thoughtprocessor

# ===================================
# AI Provider: Google Gemini
# ===================================
AI_PROVIDER=google

# Google Gemini (ADD YOUR KEY HERE)
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE
GOOGLE_MODEL=gemini-2.5-flash-lite

# OpenAI (for embeddings - ADD YOUR KEY)
OPENAI_API_KEY=YOUR_OPENAI_KEY_HERE
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ===================================
# Optional: Other Providers (not used by default)
# ===================================
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ===================================
# Application Configuration
# ===================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Processing
BATCH_SCHEDULE=0 2 * * *
TIMEZONE=UTC
MAX_TOKENS=4000

# Caching
SEMANTIC_CACHE_THRESHOLD=0.92
SEMANTIC_CACHE_TTL_DAYS=7
PROMPT_CACHE_ENABLED=true

# Rate Limiting
RATE_LIMIT_DELAY=0.5
MAX_RETRIES=3
